 <div class="container">
  <h1><%= @task.title %></h1>

  <div class="well">
      <%= @task.details %>
  </div>

  <% if @task.completed %>
    <input type="checkbox" checked>
    This task is completed
  <% else %>
    <input type="checkbox">
    This task is not completed yet
  <% end %>

  <hr>
  <%= link_to 'Back to list', tasks_path%>
</div>
