 <div class="container">
  <h1><%= @task.title %></h1>
  <div class="well">
      <%= @task.details %>
  </div>

  <div>
    <% if @task.completed %>
      <i class="far fa-check-circle"></i>
      This task is completed
    <% else %>
      <i class="far fa-circle"></i>
      This task is not completed yet
    <% end %>
  </div>
  <br>
  <div class="btn btn-default">
    <%= link_to edit_task_path do%>
      <i class="far fa-edit"></i> Edit task
    <% end %>
  </div>


  <hr>
  <%= link_to tasks_path do%>
    <i class="fas fa-undo"></i> Back to list
  <% end %>
</div>
