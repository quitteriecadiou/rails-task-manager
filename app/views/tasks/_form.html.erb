<div class="col-xs-4">
  <div class="row">
    <%= form_for(task) do |t| %>
      <div class="form-group">
        <%= t.label :title %>
        <%= t.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= t.label :details %>
        <%= t.text_field :details, class: "form-control" %>
      </div>

      <%= t.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
